- if activity.capital.amount > 0
  /%img.icon{:border => "0", :height => "16", :src => "/assets/icons/coins.png", :width => "16"}/
  = raw tr("{user_name} earned {capital}{currency_short_name} because undeclareds found {point_name} helpful", "view/activities/_activitycapitaldocumenthelpfulundeclareds", :user_name => link_to(activity.user.login, activity.user), :capital => activity.capital.amount.abs, :currency_short_name => current_instance.currency_short_name, :point_name => link_to((activity.document.name), activity.document))
- else
  /%img.icon{:border => "0", :height => "16", :src => "/assets/icons/coins_delete.png", :width => "16"}/
  = raw tr("{user_name} lost {capital}{currency_short_name} because undeclares found {point_name} unhelpful", "view/activities/_activitycapitaldocumenthelpfulundeclareds", :user_name => link_to(activity.user.login, activity.user), :capital => activity.capital.amount.abs, :currency_short_name => current_instance.currency_short_name, :point_name => link_to((activity.document.name), activity.document))
