- if activity.capital.amount > 0
  /%img.icon{:border => "0", :height => "16", :src => "/assets/icons/coins.png", :width => "16"}/
  = raw tr("Earned {capital}{currency_short_name} because both endorsers and opposers found {point_name} helpful", "view/activities/_activitycapitalpointhelpfuleveryone_nouser", :capital => activity.capital.amount.abs, :currency_short_name => current_instance.currency_short_name, :point_name => link_to((activity.point.name), activity.point))
- else
  /%img.icon{:border => "0", :height => "16", :src => "/assets/icons/coins_delete.png", :width => "16"}/
  = raw tr("Lost {capital}{currency_short_name} because both endorsers and opposers found {point_name} unhelpful", "view/activities/_activitycapitalpointhelpfuleveryone_nouser", :capital => activity.capital.amount.abs, :currency_short_name => current_instance.currency_short_name, :point_name => link_to((activity.point.name), activity.point))
