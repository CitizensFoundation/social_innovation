- if activity.capital.amount > 0
  /%img.icon{:border => "0", :height => "16", :src => "/assets/icons/coins.png", :width => "16"}/
  - if activity.capital.is_undo?
    = raw tr("{user_name} earned {capital}{currency_short_name} because opposers didn't find {point_name} unhelpful anymore", "view/activities/_activitycapitalpointhelpfulopposers_noself", :user_name => link_to(activity.user.login, activity.user), :capital => activity.capital.amount.abs, :currency_short_name => current_instance.currency_short_name, :point_name => link_to((activity.point.name), activity.point))
  - else
    = raw tr("{user_name} earned {capital}{currency_short_name} because opposers found {point_name} helpful", "view/activities/_activitycapitalpointhelpfulopposers_noself", :user_name => link_to(activity.user.login, activity.user), :capital => activity.capital.amount.abs, :currency_short_name => current_instance.currency_short_name, :point_name => link_to((activity.point.name), activity.point))
- else
  /%img.icon{:border => "0", :height => "16", :src => "/assets/icons/coins_delete.png", :width => "16"}/
  - if activity.capital.is_undo?
    = raw tr("{user_name} lost {capital}{currency_short_name} because opposers didn't find {point_name} helpful anymore", "view/activities/_activitycapitalpointhelpfulopposers_noself", :user_name => link_to(activity.user.login, activity.user), :capital => activity.capital.amount.abs, :currency_short_name => current_instance.currency_short_name, :point_name => link_to((activity.point.name), activity.point))
  - else
    = raw tr("{user_name} lost {capital}{currency_short_name} because opposers found {point_name} unhelpful", "view/activities/_activitycapitalpointhelpfulopposers_noself", :user_name => link_to(activity.user.login, activity.user), :capital => activity.capital.amount.abs, :currency_short_name => current_instance.currency_short_name, :point_name => link_to((activity.point.name), activity.point))
