- if activity.revision.has_other_priority?
  %img.icon{:border => "0", :height => "16", :src => "/assets/icons/comments_add.png", :width => "16"}/
  = raw tr("Linked {point_name} to {priority_name}", "view/activities/_activitypointrevisionotherpriority_nouser", :point_name => link_to(activity.point.name, point_revision_url(activity.point,activity.revision)), :priority_name => link_to(activity.revision.other_priority.name, activity.revision.other_priority))
  \.
- else
  %img.icon{:border => "0", :height => "16", :src => "/assets/icons/comments_delete.png", :width => "16"}/
  = raw tr("Removed the priority link from {point_name}", "view/activities/_activitypointrevisionotherpriority_nouser", :point_name => link_to(activity.point.name, point_revision_url(activity.point,activity.revision)))
  \.
