%span{:id => "activity_#{activity.id.to_s}_button_small"}
  - if following
    %span.idea_remove{:id => "activity_add_#{activity.id.to_s}"}
      = tr("Following", "view/activities/_button_small")
      = link_to "&nbsp;x".html_safe, activity_following_path(activity, following, :region => "activity_show"), |
        :method => :delete, :class => "idea_remove_link",                                                  |
        :remote=>true,                                                                                         |
        'data-disable-with' => "",                                                                             |
        'data-loader-name' => "circle",                                                                        |
        :title => tr("Remove this person from your network", "view/activities/_button_small")                  |
  - else
    %span.idea_add{:id => "activity_add_#{activity.id.to_s}"}
      = link_to tr("Follow", "view/activities/_button_small"), activity_followings_path(activity, :region => "activity_show"),               |
        :method => :post,                                                                                                                    |
        :remote=>true,                                                                                                                       |
        'data-disable-with' => escape_t(tr("FOLLOW","Ajax")),                                                                                |
        'data-loader-name' => "horizontal_small",                                                                                            |
        :class => "idea_add_link", :title => tr("I want to follow this person's comments and activity", "view/activities/_button_small") |
  = tr("Follow this discussion", "view/activities/_button_small")
