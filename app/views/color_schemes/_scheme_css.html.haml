- unless SubInstance.current.menu_strip.to_s.include?("missing.png")
  :css
    #sib_sub_nav {background-image: url(#{SubInstance.current.menu_strip.url(:icon_full)}) !important}
    .sprite_clip {background-image: url(#{SubInstance.current.menu_strip_side.url(:icon_full)}) !important}
    /* nav colors */
- else
  :css
    #sib_sub_nav {background-image: url(#{current_instance.menu_strip.url(:icon_full)}) !important}
    .sprite_clip {background-image: url(#{current_instance.menu_strip_side.url(:icon_full)}) !important}
    /* nav colors */

- if SubInstance.current.custom_css
  :css
    #{SubInstance.current.custom_css}
