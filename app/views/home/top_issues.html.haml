%b>= link_to tr("Top ideas", "view/home/top_issues"), top_ideas_url
\:
%br/
- for tag in @issues
  = tr(tag.title,"model/category")
  \:
  \#{link_to tag.top_idea.name, tag.top_idea}
  %br/
