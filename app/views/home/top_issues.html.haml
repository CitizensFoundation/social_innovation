  - for tag in @issues
    = tr(tag.title,"model/category")
    \:
    \#{link_to tag.controversial_idea.name, tag.controversial_idea}
    %br/
  %p
    %b>= link_to tr("Rising ideas", "view/home/top_issues"), rising_ideas_url
