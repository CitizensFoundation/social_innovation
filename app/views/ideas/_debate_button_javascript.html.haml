:javascript
  jQuery("#debate_button_#{idea.id}").click(function () {
        var slide = jQuery("#idea_detail_#{idea.id}");
        if (!slide.data("loaded")) {
            slide.load('#{idea_detail_idea_url(idea)}');
            slide.data("loaded", true);
                                  $('.border').css('border-bottom','none');
        } else {
            slide.slideToggle("slow");
                                  $('.border').css('border-bottom','none');
        };
    });
  jQuery("#debate_button_#{idea.id}").toggle(
    function () {
      $("#debate_button_#{idea.id}").css("background-image", "url(/assets/buttons/debate_grey.png)");
    },
    function () {
      $("#debate_button_#{idea.id}").css("background-image", "url(/assets/buttons/debate.png)");
    }
  );