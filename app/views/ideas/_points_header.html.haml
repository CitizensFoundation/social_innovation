- if support
  %span#endorse-title= tr("Points for", "view/ideas/_nav")
  %span.idea_add{:id => "idea_add_point_for#{idea.id.to_s}"}
    = link_to tr("Add point for", "view/ideas/_nav"), new_idea_point_path(idea, support: true),          |
      :class => "idea_add_link1", :title => tr("I endorse this and want to explain why.", "view/ideas/_nav") |
- else
  %span#oppose-title= tr("Points against", "view/ideas/_nav")
  %span.idea_add{:id => "idea_add_point_against#{idea.id.to_s}"}
    = link_to tr("Add point against", "view/ideas/_nav"), new_idea_point_path(idea),                       |
      :class => "idea_add_link2", :title => tr("I oppose this and want to explain why.", "view/ideas/_button") |
