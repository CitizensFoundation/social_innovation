#hp_intro= @page_title
%p
  %p
    - if @priorities.any?
      - if params[:action] == 'official'
        = tr("This is the {official_user_name} agenda for {tag_name} as prioritized by all members", "view/issues/list", :tag_name => tr(@tag_names, "model/category").titleize, :official_user_name => current_instance.official_user.name)
      - elsif params[:action] == 'not_official'
        = tr("These are our members' {tag_name} priorities NOT on {official_user_name} agenda", "view/issues/list", :tag_name => tr(@tag_names, "model/category").titleize, :official_user_name => current_instance.official_user.name)
      - elsif params[:action] == 'official_opposed'
        = tr("These are our members' {tag_name} priorities that {official_user_name} opposes", "view/issues/list", :tag_name => tr(@tag_names, "model/category").titleize, :official_user_name => current_instance.official_user.name)
      = render :partial => "priorities/top_level_listing", :locals=>{:priorities=>@priorities, :endorsements=>@endorsements}
      %p= will_paginate @priorities
    - else
      = tr("No priorities for {tag_name} yet", "view/issues/list", :tag_name => tr(@tag_names, "model/category").titleize)
