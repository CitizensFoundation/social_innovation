#nav_sub
  - if @user and not @user.new_record? and ['users','messages'].include?(params[:controller])
    %div{:id => "nav_sub_<haml:silent> if @user.is_influential? </haml:silent><haml:block>1</haml:block><haml:silent> elsif @user.is_ambassador? </haml:silent><haml:block>5</haml:block><haml:silent> elsif @user.is_new? </haml:silent><haml:block>4</haml:block><haml:silent> elsif @user.has_twitter? </haml:silent><haml:block>3</haml:block>"}
  - else
    %div{:id => "nav_sub_<haml:silent> if ['index'].include?(params[:action]) and ['network'].include?(params[:controller]) </haml:silent><haml:block>1</haml:block><haml:silent> elsif ['following'].include?(params[:action]) </haml:silent><haml:block>0</haml:block><haml:silent> elsif ['talkative'].include?(params[:action]) </haml:silent><haml:block>2</haml:block><haml:silent> elsif ['twitterers'].include?(params[:action]) </haml:silent><haml:block>3</haml:block><haml:silent> elsif ['newest'].include?(params[:action]) </haml:silent><haml:block>4</haml:block><haml:silent> elsif ['ambassadors'].include?(params[:action]) </haml:silent><haml:block>5</haml:block><haml:silent> elsif ['sub_instances'].include?(params[:action]) or ['sub_instances'].include?(params[:controller]) </haml:silent><haml:block>6</haml:block><haml:silent> elsif ['suspended','probation','deleted','unverified','warnings'].include?(params[:action]) </haml:silent><haml:block>7</haml:block>"}
  %ul#menu_sub
    - if logged_in?
      %li.tab0
        %span.tab_header
          = link_to tr("Your network", "view/user_contacts/_nav"), following_user_contacts_path(current_user)
    %li.tab1
      %span.tab_header
        = link_to tr("Influential", "view/network/_nav"), :controller => "network"
    %li.tab2
      %span.tab_header
        = link_to tr("Talkative", "view/network/_nav"), :controller => "network", :action => "talkative"
    %li.tab4
      %span.tab_header
        = link_to tr("New members", "view/network/_nav"), :controller => "network", :action => "newest"
    %li.tab5
      %span.tab_header
        = link_to tr("Ambassadors", "view/network/_nav"), :controller => "network", :action => "ambassadors"
    - if current_instance.has_twitter_enabled?
      %li.tab3
        %span.tab_header
          = link_to tr("Twitterers", "view/network/_nav"), :controller => "network", :action => "twitterers"
    - if logged_in? and current_user.is_admin?
      %li.tab7.mega
        %span.tab_header
          = link_to tr("More", "view/network/_nav"), :controller => "network", :action => "newest"
        .tab_body
          = link_to tr("Unverified", "view/network/_nav"), :controller => "network", :action => "unverified"
          %br/
          = link_to tr("Warnings", "view/network/_nav"), :controller => "network", :action => "warnings"
          %br/
          = link_to tr("Suspended", "view/network/_nav"), :controller => "network", :action => "suspended"
          %br/
          = link_to tr("Probation", "view/network/_nav"), :controller => "network", :action => "probation"
          %br/
          = link_to tr("Deleted", "view/network/_nav"), :controller => "network", :action => "deleted"
          %p
