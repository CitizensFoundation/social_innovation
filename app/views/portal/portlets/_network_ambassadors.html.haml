- cache(["portlets_network_ambassadors",locale,Partner.current_id,@inline_translations_enabled], :expires_in => 5.minutes) do
  - @row = 0
  %table{:border => "0", :cellpadding => "0", :cellspacing => "0"}
    - for user in User.active.by_invites_accepted.item_limit(portlet.portlet_template.item_limit)
      - @row += 1
      %tr
        %td{:valign => "top"}
          .priority_position= @row
        %td{:style => "padding: 10px 5px 4px 7px;", :valign => "top", :width => "26"}
          = render :partial => "users/pic", :locals => {:user => user}
        %td{:style => "padding: 5px 5px 4px 0px;", :valign => "top"}
          = link_to user.login, user
          %span.pc
            = user.capitals_count
            = current_instance.currency_short_name
          - if user.referrals_count > 0
            = tr("Recruited {count} members", "view/portal/portlets", :count => user.referrals_count)
          - if user.referrals_count > 0 and user.contacts_invited_count > 0
            \&middot;
          - if user.contacts_invited_count > 0
            = tr("Invited {count} people", "view/portal/portlets", :count => user.contacts_invited_count)
          - if user.has_top_priority?
            %br/
            = tr("#1 priority:", "view/portal/portlets")
            - if user.top_endorsement.is_down?
              %span.opposed= tr("Opposing", "view/portal/portlets")
            = link_to user.top_endorsement.priority.name, user.top_endorsement.priority
            \.
  = link_to "#{tr("More", "view/portal/portlets")}...", "/network/ambassadors"
