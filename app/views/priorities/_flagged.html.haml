- if priority.flags_count > 0 and priority.status == 'published' and logged_in? and current_user.is_admin?
  %div{:id => "priority_flag_#{priority.id}"}
    .warning_inline2{:id => "priority_flag_#{priority.id.to_s}"}
      %span.red>= tr("{count} flags", "view/priorities/_flagged", :count => priority.flags_count)
      \. #{tr("Issue {user_name} warning {warnings_count}", "view/priorities/_flagged", :user_name => priority.user.login, :warnings_count => priority.user.warnings_count)}
      %span.tag_button
        = link_to tr("YES", "view/priorities/_flagged"), "/priorities/abusive/#{priority.id}",          |
          :remote=>true,                                                                                |
          'data-disable-with' => escape_t(tr("Issuing warning","Ajax")),                                |
          'data-loader-name' => "horizontal_small",                                                     |
          :class => "quality_unhelpful_link", :title => tr("Issue warning", "view/priorities/_flagged") |
      %span.or= tr("OR", "view/priorities/_flagged")
      %span.tag_button
        = link_to tr("NO", "view/priorities/_flagged"), "/priorites/not_abusive/#{priority.id}",     |
          :remote=>true,                                                                             |
          'data-disable-with' => escape_t(tr("Clearing warning","Ajax")),                            |
          'data-loader-name' => "horizontal_small",                                                  |
          :class => "quality_unhelpful_link", :title => tr("Clear flag", "view/priorities/_flagged") |
  .clear
