= render :partial => "header"
= render :partial => "nav"
%p
  = form_for(@priority) do |f|
    = f.error_messages
    .field
      .field_label
        = tr("Priority name", "view/priorities/edit")
      .field_box
        = f.text_field :name, :size => 40, :maxlength => 60, :id => "dontautocompletethis"
    - if current_sub_instance and current_sub_instance.required_tags
      .field
        .field_label
          = tr("Priority type", "views/priorities/form")
        - current_sub_instance.required_tags.split(',').each do |sub_instance_tag|
          = f.radio_button :priority_type, sub_instance_tag, checked: @priority.issue_list.include?(sub_instance_tag)
          %span.Chapter_name= tr(sub_instance_tag, "views/priorities/form")
    .field
      .field_label
        = tr("Category", "view/users/_form_long")
      .field_box
        = f.select :category, options_for_select_simple(Category.all.collect{|s|[s.i18n_name,s.id]}, @priority.category.id)
    %br/
    = f.submit tr("Save priority", "view/priorities/edit"), :class => "yellow_button"
