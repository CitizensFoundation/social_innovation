%div{:style => "width:auto;"}
  %ul
    %li{:style => "float:left; list-style:none; border-bottom:none;"}
      #hp_intro{:style => "border-bottom:none;"}= @page_title
    %li{:style => "float:right; list-style:none"}
      = rss_url(@rss_url)
  %ul
.clear
.white_line
- if params[:action] == 'yours_finished'
  = tr("Like a to do list, when priorities you've endorsed or opposed are finished, they will fall off your list and be placed here.", "view/priorities/yours")
- if @priorities.empty?
  = tr("You have not endorsed any priorities yet. For inspiration, why not check out some <a href='/priorities/random'>random priorities</a>?", "view/priorities/yours")
- else
  %table{:border => "0", :cellpadding => "0", :cellspacing => "0"}
    %tr
      %td{:align => "right", :style => "padding-right: 5px;"}
        %span.table_header= tr("Rank", "view/priorities/yours")
      %td{:style => "padding-left: 3px;"}
        %span.table_header= tr("Wk", "view/priorities/yours")
      %td{:style => "padding-left: 3px;"}
        %span.table_header= tr("Mo", "view/priorities/yours")
      %td{:style => "padding-left: 7px; padding-bottom: 2px;"}= will_paginate @priorities
    - for e in @priorities
      %tr
        = render :partial => "priorities/rank_week_month", :locals => {:priority => e.priority }
        %td{:style => "padding-left: 8px;", :valign => "top"}
          .priority_listing{:id => "priority_#{e.priority.id}"}
            = render :partial => "priorities/listing", :locals => {:priority => e.priority, :endorsement => e, :value => 0}
  %p
    = will_paginate @priorities
  %p
    = tr("You can also follow all the <a href='/news/your_priority_activities'>activity</a> and <a href='/news/your_priority_discussions'>discussions</a> on your priorities.", "view/priorities/yours")
