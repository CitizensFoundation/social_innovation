#hp_intro= @page_title
%p
  = tr("Your bio will go at the top of <a href='{url}'>your profile page</a>, above your top 5 ideas.", "view/profiles/edit", :url => url_for(@user))
  = form_for @profile, :url => user_profile_path(@user) do |f|
    = f.error_messages :header_message => tr("Oops, there was a problem", "view/profiles/edit")
    .field
      .field_label
        = tr("Briefly, tell us about yourself.", "view/profiles/edit")
        (
        %span#bioContentDown
        = tr("characters left", "view/profiles/edit")
        )
      .field_box
        = f.text_area :bio, :size => "60x5", :id => "bioContent", :button => 'submit', :maxLength => 500
    = f.submit tr("Save your bio", "view/profiles/edit"), :class => "yellow_button"
  %p
    = tr("<table border=\"0\" cellspacing=\"0\" cellpadding=\"0\" width=\"350\"> 	<tr><td>Use <a href=\"http://hobix.com/textile/\" title=\"Complete reference\">Textile formatting</a>. For example, this:</td><td>becomes:</td></tr> 	<tr><td>\*bold\*</td><td><b>bold</b></td></tr> 	<tr><td>_underline_</td><td><u>underline</u></td></tr> 	<tr><td>\# ordered list</td><td>1. ordered list</td></tr> 	<tr><td>\* unordered list</td><td><li style=\"margin-left:15px;\">unordered list</td></tr> 	<tr><td>\"Link\":http://otherwebsite.com/</td><td><a href=\"http://otherwebsite.com/\">Link</a></td></tr> </table> |
      ", "view/profiles/edit")                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                            |
