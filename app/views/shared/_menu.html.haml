  %li
    = link_to :controller => "ideas" do
      %div.sprite_clipwrapper
        = image_tag SubInstance.current.menu_strip_side.url(:icon_full), :border => 0, :class=>"sprite_clip #{controller_name=="home" ? "home_pos_selected" : "home_pos"}"
      = tr("Home","Menu system")
  %li
    = link_to :controller => "ideas", :action=>"index" do
      %div.sprite_clipwrapper
        = image_tag SubInstance.current.menu_strip_side.url(:icon_full), :border => 0, :class=>"sprite_clip #{controller_name=="ideas" ? "ideas_pos_selected" : "ideas_pos"}"
      = tr("Ideas", "view/shared/_menu")
  %li
    = link_to :controller => "points" do
      %div.sprite_clipwrapper
        = image_tag SubInstance.current.menu_strip_side.url(:icon_full), :border => 0, :class=>"sprite_clip #{controller_name=="points" ? "points_pos_selected" : "points_pos"}"
      = tr("Debate", "view/shared/_menu")
  %li
    = link_to :controller => "feed", :action=>"top" do
      %div.sprite_clipwrapper
        = image_tag SubInstance.current.menu_strip_side.url(:icon_full), :border => 0, :class=>"sprite_clip #{controller_name=="feed" ? "feed_pos_selected" : "feed_pos"}"
      = tr("Feed", "view/shared/_menu")
  %li
    = link_to :controller => "users" do
      %div.sprite_clipwrapper
        = image_tag SubInstance.current.menu_strip_side.url(:icon_full), :border => 0, :class=>"sprite_clip #{["users","network"].include?(controller_name) ? "people_pos_selected" : "people_pos"}"
      = tr("People", "view/shared/_menu")
  %li
