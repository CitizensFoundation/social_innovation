      $("a.signin").click(function(e) {
          e.preventDefault();
          $("#sib_login_form").toggle();
          $(".signin").toggleClass("menu-open");
      });

      $("#sib_login_form").mouseup(function() {
          return false
      });

      $(document).mouseup(function(e) {
          if($(e.target).parent("a.signin").length==0) {
              $(".signin").removeClass("menu-open");
              $("#sib_login_form").hide();
