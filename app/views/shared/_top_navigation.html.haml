.nav.nav-user
  %ul
    %li.search
      = render :partial => "shared/search"
    %li.help
      %a.help{:href => "help"}
        %span
          = tr("Help")
    %li.signin
      - unless logged_in?
        %a.signin{:href => "login"}
          = tr("Sign in")
      - else
        %div.signedin
          %div.avatar
            = render :partial => "users/pic_30", :locals => {:user => current_user}
          - if current_user.unread_notifications_count > 0
            %div.notify_box
              %a.notifications{:href => "notifications"}
                = current_user.unread_notifications_count
          %a.profile{:href => "profile"}
            %div
              = current_user.login
    %li.add
      %a.button{:href => "/ideas/new"}
        = tr("New idea")
        %span.icn.icn-add

- if logged_in?
  = render :partial => "shared/user_info"
  = render :partial => "shared/notifications"
- else
  = render :partial => "users/login"

= render :partial => "shared/help"

