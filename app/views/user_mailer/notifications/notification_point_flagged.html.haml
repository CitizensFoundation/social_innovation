= render :partial=>"user_mailer/header", formats: [:html]
%p
  = tr("Hi", "email")
  = @recipient.first_name.capitalize
  ,
%p
  = tr("{sender_name} flagged {notifiable_name} for review. Current flags count is {flags_count}.", "email", |
    :sender_name => @sender.name,                                                                            |
    :notifiable_name => @notifiable.name,                                                                    |
    :flags_count => @notifiable.flags_count)                                                                 |
  %p= link_to @notifiable.show_url, @notifiable.show_url
  = render :partial=>"user_mailer/footer", formats: [:html]
