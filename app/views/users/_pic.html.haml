- if user.has_picture?
  .border_miss_avatar
    %a{:href => url_for(user)}
      = image_tag user.buddy_icon.url(:icon_24), :border => 0, :alt => "", :size => "35x35"
- elsif user.facebook_id and not request.xhr?
  = fb_profile_pic user,:facebook_logo=>false, :linked=>false, :size=>"square", :height=>"35",:width=>"35"
- else
  .border_miss_avatar
    %a{:href => "<haml:silent> if logged_in? and current_user.id == user.id </haml:silent><haml:block>#{url_for picture_settings_url}</haml:block><haml:silent> else </haml:silent><haml:block>#{url_for user}</haml:block>"}= image_tag current_instance.buddy_icon.url(:icon_24), :border => 0, :alt => "", :size => "35x35"
