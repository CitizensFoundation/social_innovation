= render :partial => "header"
%p
  %table{:border => "0", :cellpadding => "0", :cellspacing => "0", :width => "100%"}
    %tr
      %td{:valign => "top"}
        = will_paginate(@priorities)
        %table{:border => "0", :cellpadding => "0", :cellspacing => "0"}
          - for p in @priorities
            - if @endorsements
              - endorsement = @endorsements.detect {|e| e.priority_id == p.priority_id }
            %tr
              %td{:valign => "top"}
              %td{:align => "right", :valign => "top", :width => "25"}
                .priority_position= p.position
              %td{:style => "padding-left: 8px;", :valign => "top"}
                .priority_listing{:id => "priority_#{p.priority_id}"}
                  .point_name{:id => "priority_#{p.priority_id}_name"}
                    - if p.value < 0
                      %span.opposed= tr("opposed", "view/users/priorities")
                    = link_to_unless_current h(p.priority.name), p.priority, :class => "priority_name_link"
                  = render :partial => "priorities/action_show", :locals => {:priority => p.priority, :endorsement => endorsement }
        %p
          = will_paginate(@priorities)
      %td{:style => "padding-left: 20px;", :valign => "top", :width => "160"}
        = render :partial => "left_nav"
