= render :partial => "header"
%p
  %table{:border => "0", :cellpadding => "0", :cellspacing => "0", :width => "100%"}
    %tr
      %td{:valign => "top"}
        - if @user.profile
          .bio
            = @user.profile.bio_html
        - if @priorities.any?
          - if @user.endorsements_count > 5
            .heading= link_to tr("Top 5 of {priority_count} priorities", "view/users/show", :priority_count => @user.endorsements_count), priorities_user_path(@user)
          - else
            .heading= tr("Top {count} priorities", "view/users/show", :count => @priorities.length)
          %table{:border => "0", :cellpadding => "0", :cellspacing => "0"}
            - for p in @priorities
              - if @endorsements
                - endorsement = @endorsements.detect {|e| e.priority_id == p.priority_id }
              %tr
                %td{:align => "right", :valign => "top", :width => "5"}
                  .priority_position= p.position
                %td{:style => "padding-left: 8px;", :valign => "top"}
                  .priority_listing.profile{:id => "priority_#{p.priority_id}"}
                    .point_name{:id => "priority_#{p.priority_id}_name"}
                      - if p.value < 0
                        %span.opposed= tr("opposed", "view/users/show")
                      = link_to_unless_current h(p.priority.name), p.priority, :class => "priority_name_link"
                    = render :partial => "priorities/action_show", :locals => {:priority => p.priority, :endorsement => endorsement }
          %p
        = render :partial => "bulletins/form", :locals => {:activity => Activity.new, :comment => Comment.new }
        #activities.single
          - for activity in @activities
            = render :partial => "activities/show", :locals => {:activity => activity, :suffix => "_nouser"}
        %p
          - if @activities.total_pages > 1
            = will_paginate(@activities, :params => {:action => "activities"} )
      %td{:valign => "top", :width => "160"}
        = render :partial => "left_nav"
