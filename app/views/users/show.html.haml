= render :partial => "header"
%p
  %table{:border => "0", :cellpadding => "0", :cellspacing => "0", :width => "100%"}
    %tr
      %td{:valign => "top"}
        - if @user.profile
          .bio
            = @user.profile.bio_html
        - if @ideas.any?
          - if @user.endorsements_count > 5
            .heading= link_to tr("Top 5 of {idea_count} ideas", "view/users/show", :idea_count => @user.endorsements_count), ideas_user_path(@user)
          - else
            .heading= tr("Top {count} ideas", "view/users/show", :count => @ideas.length)
          %table{:border => "0", :cellpadding => "0", :cellspacing => "0"}
            - for p in @ideas
              - if @endorsements
                - endorsement = @endorsements.detect {|e| e.idea_id == p.idea_id }
              %tr
                %td{:align => "right", :valign => "top", :width => "5"}
                  .idea_position= p.position
                %td{:style => "padding-left: 8px;", :valign => "top"}
                  .idea_listing.profile{:id => "idea_#{p.idea_id}"}
                    .point_name{:id => "idea_#{p.idea_id}_name"}
                      - if p.value < 0
                        %span.opposed= tr("opposed", "view/users/show")
                      = link_to_unless_current h(p.idea.name), p.idea, :class => "idea_name_link"
                    = render :partial => "ideas/action_show", :locals => {:idea => p.idea, :endorsement => endorsement }
          %p
        = render :partial => "bulletins/form", :locals => {:activity => Activity.new, :comment => Comment.new }
        #activities.single
          - for activity in @activities
            = render :partial => "activities/show", :locals => {:activity => activity, :suffix => "_nouser"}
        %p
          - if @activities.total_pages > 1
            = will_paginate(@activities, :params => {:action => "activities"} )
      %td{:valign => "top", :width => "160"}
        = render :partial => "left_nav"
